<Window x:Class="LifeUIWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:LifeUIWPF"
        Title="MainWindow" Height="450" Width="440">
    <Grid x:Name="content" Loaded="content_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="btnStart" Margin="0,0,10,0" Click="btnStart_Click">Start</Button>
            <Button Name="btnReset" Margin="0,0,10,0" Click="btnReset_Click">Reset</Button>
        </StackPanel>
        <local:LifeGridView x:Name="gridView" Margin="0, 10, 0, 0" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center"></local:LifeGridView>
    </Grid>

</Window>
